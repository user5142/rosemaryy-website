---
import { Icon } from 'astro-icon/components';

const navLinks = [
  { name: 'Features', href: '#features' },
  { name: 'Blog', href: '/blog' },
  { name: 'Support', href: '#support' },
];
---

<header class="sticky top-0 z-50 w-full border-b border-gray-100 bg-background/80 backdrop-blur-md transition-all">
  <div class="mx-auto flex h-16 max-w-7xl items-center justify-between px-4 sm:px-6 lg:px-8">
    <a href="/" class="flex items-center">
      <img src="/images/planpanda-logo.svg" alt="PlanPanda" class="h-7 w-auto" />
    </a>

    <!-- Desktop Navigation -->
    <nav class="hidden md:flex items-center gap-8">
      {navLinks.map((link) => (
        <a href={link.href} class="text-sm font-medium text-text/80 hover:text-primary transition-colors">
          {link.name}
        </a>
      ))}
    </nav>

    <div class="hidden md:flex items-center gap-4">
      <a
        href="#download"
        class="rounded-full bg-primary px-5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-primary/90 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary transition-all"
      >
        Download App
      </a>
    </div>

    <!-- Mobile Menu Button -->
    <button id="mobile-menu-btn" class="md:hidden p-2 text-text" aria-label="Toggle menu">
       <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
        </svg>
    </button>
  </div>

  <!-- Mobile Navigation -->
  <div id="mobile-menu" class="hidden md:hidden border-t border-gray-100 bg-background">
    <div class="space-y-1 px-4 py-6">
      {navLinks.map((link) => (
        <a href={link.href} class="block rounded-lg px-3 py-2.5 text-base font-semibold leading-7 text-text hover:bg-gray-50">
          {link.name}
        </a>
      ))}
      <div class="mt-4 px-3">
        <a
          href="#download"
          class="block w-full rounded-full bg-primary px-3 py-2.5 text-center text-base font-semibold text-white shadow-sm hover:bg-primary/90"
        >
          Download App
        </a>
      </div>
    </div>
  </div>
</header>

<script>
  const mobileMenuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');

  mobileMenuBtn?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>

